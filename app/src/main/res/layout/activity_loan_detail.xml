<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.loan.LoanDetailActivity">

    <com.google.android.material.appbar.MaterialToolbar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:navigationIconTint="@color/secondary40">

        <ImageButton
            android:id="@+id/btn_Back"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@color/white"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/secondary40" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khoản vay"
            android:textColor="@color/primary40"
            android:textSize="24sp"
            android:textFontWeight="700"
            android:textAlignment="center"
            android:layout_marginRight="30dp"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/top_app_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_edit_wallet"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:background="@drawable/background_color_secondary80_outline"
                    android:icon="@drawable/ic_pen"
                    android:text="Sửa"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="13sp"
                    app:icon="@drawable/ic_pen"
                    app:iconGravity="textTop"
                    app:iconSize="28dp"
                    app:iconTint="@color/primary40"  />

                <Button
                    android:id="@+id/btn_delete_wallet"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/background_color_secondary80_outline"
                    android:textFontWeight="600"
                    android:text="Xóa"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:icon="@drawable/ic_trash"
                    app:iconGravity="textTop"
                    app:iconSize="28dp"
                    app:iconTint="@color/primary40" />
            </LinearLayout>

            <TextView
                android:id="@+id/noteTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vay tiền mua xe"
                android:textFontWeight="800"
                android:textSize="24sp"
                android:textColor="@color/secondary40"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/paidTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,000,000₫"
                    android:textColor="@color/secondary40"
                    android:textFontWeight="700"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/amountTotalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/5,000,000₫"
                    android:textColor="@color/primary40"
                    android:textFontWeight="700"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/principalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền gốc: "
                    android:textColor="@color/secondary40"
                    android:textFontWeight="500"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/principalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5,000,000₫"
                    android:textColor="@color/primary40"
                    android:textFontWeight="500"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/percentTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20%"
                    android:textColor="@color/primary40"
                    android:textFontWeight="600"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>
                <FrameLayout
                    android:id="@+id/totalLine"
                    android:layout_width="270dp"
                    android:layout_height="12dp"
                    android:background="@drawable/background_color_primary90_outline"
                    android:layout_gravity="center">
                    <View
                        android:id="@+id/paidLine"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/primary40_bg"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/secondary80_bg"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người vay"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/borrowerNameTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:text="Lê Bảo Như"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại khoản vay"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/typeTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:text="Vay"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/dateTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:text="14/10/2023"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/timeTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:text="7:30"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời hạn thanh toán"
                        android:textColor="@color/primary40"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/deadlineTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:text="17/12/2023"
                        android:textColor="@color/primary40"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/background_color_primary90_outline">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lãi suất"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/interestRateTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:text="4.6%"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cách tính"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/interestRateTypeTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:text="Theo dư nợ gốc"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời hạn"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/periodTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:text="1 năm"
                        android:textColor="@color/secondary20"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>