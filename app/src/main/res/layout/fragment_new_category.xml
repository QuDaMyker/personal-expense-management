<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.fragment.NewCategoryFragment"
    android:paddingHorizontal="20dp"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_Back"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@color/white"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_left"
                app:tint="@color/secondary40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand_bold"
                android:text="Thêm danh mục"
                android:textColor="@color/primary40"
                android:textFontWeight="700"
                android:textSize="24sp" />

        </com.google.android.material.appbar.MaterialToolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên danh mục"
            android:textFontWeight="600"
            android:textSize="16dp"

            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Nhập số tiền cho vay"
            app:errorEnabled="true"
            app:suffixText="₫">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textFontWeight="400" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Màu sắc"
            android:textFontWeight="600"
            android:textSize="16dp" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_color_secondary80_outline"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            app:chipSpacingVertical="0dp"
            app:singleSelection="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:outlineProvider="none"
                android:paddingStart="0dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/clItem1"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:checked="false"
                    app:chipBackgroundColor="@color/colorItem1"
                    app:chipCornerRadius="25dp"
                    app:chipEndPadding="0dp"
                    app:chipIconSize="30dp"
                    app:chipStartPadding="18dp"
                    app:chipStrokeWidth="0dp"
                    app:iconEndPadding="0dp"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/clItem2"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    app:chipBackgroundColor="@color/colorItem2"
                    app:chipCornerRadius="25dp"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/clItem3"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    app:chipBackgroundColor="@color/colorItem3"
                    app:chipCornerRadius="25dp"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/clItem4"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    app:chipBackgroundColor="@color/colorItem4"
                    app:chipCornerRadius="35dp"
                    app:chipStrokeWidth="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:outlineProvider="none">

                <com.google.android.material.chip.Chip
                    android:id="@+id/clItem5"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    app:chipBackgroundColor="@color/colorItem5"
                    app:chipCornerRadius="25dp"
                    app:chipEndPadding="0dp"
                    app:chipIconSize="30dp"
                    app:chipStartPadding="18dp"
                    app:chipStrokeWidth="0dp"
                    app:iconEndPadding="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/clItem6"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    app:chipBackgroundColor="@color/colorItem6"
                    app:chipCornerRadius="25dp"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/clItem7"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    app:chipBackgroundColor="@color/colorItem7"
                    app:chipCornerRadius="25dp"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/clItem8"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    app:chipBackgroundColor="@color/colorItem8"
                    app:chipCornerRadius="35dp"
                    app:chipStrokeWidth="0dp" />


            </LinearLayout>


        </com.google.android.material.chip.ChipGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biểu tượng"
            android:textFontWeight="600"
            android:textSize="16dp" />


    </LinearLayout>

</FrameLayout>