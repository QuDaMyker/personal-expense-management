                    android:id="@+id/grIsIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"

                    >

                    <RadioButton
                        android:id="@+id/radioIsIcome"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/primary40"
                        android:text="@string/thu"
                        android:textColor="@color/primary40"

                        />

                    <RadioButton
                        android:id="@+id/radioIsOutCome"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="80dp"
                        android:buttonTint="@color/primary40"
                        android:text="@string/chi"
                        android:textColor="@color/primary40" />

                    <RadioButton
                        android:id="@+id/radioBoth"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="70dp"
                        android:buttonTint="@color/primary40"
                        android:text="@string/cahai"
                        android:textColor="@color/primary40" />

                </RadioGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateNewCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_button_bg"
                    android:padding="8dp"
                    android:text="@string/luudanhmuc"
                    android:textFontWeight="700"
                    android:textSize="20sp"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
