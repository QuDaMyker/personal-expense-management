<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <layer-list>
            <item>
                <shape android:layout_width="wrap_content">
                    <solid android:color="@color/primary80" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <inset
                    android:drawable="@drawable/ic_check_circle_gradient"
                    android:insetRight="20dp"
                    android:insetLeft="325dp"
                    android:insetBottom="22dp"
                    android:insetTop="22dp"/>
            </item>
        </layer-list>

    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:layout_width="wrap_content">
                    <solid android:color="@color/primary80" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <inset
                    android:drawable="@drawable/ic_check_circle_gradient"
                    android:insetRight="20dp"
                    android:insetLeft="325dp"
                    android:insetBottom="22dp"
                    android:insetTop="22dp"/>
            </item>
        </layer-list>
    </item>

    <item android:drawable="@null">
        <shape android:layout_width="wrap_content">
            <solid
                android:color="@color/secondary80"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>
</selector>